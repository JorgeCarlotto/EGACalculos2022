<%- include('layouts/header') %> 
<body>
   
    <h1>Punto Probable de encuentro</h1>
    <h2>Carga de Datos</h2>
    <div class="container">
        <form class="row g-1" method="post" action="/puntoProbableDeEncuentro">
    
            <h2>Tiempo</h2>
            <div>
                <label for="my-input">Hora de posición actual</label>
                <input type="datetime-local" id="meeting-time"
                name="firstTime" 
                min="2022-08-07T00:00" max="2023-12-31T00:00" class="form-control">
            </div>

            <div>
                <label for="my-input">Hora de posición a calcular</label>
                <input type="datetime-local" id="meeting-time"
                name="secondTime" 
                min="2022-08-07T00:00" max="2023-12-31T00:00" class="form-control">
            </div>
    
            <h2>Datos del barco</h2>
            <div class="form-group">
                <label for="my-input">Nombre del Barco</label>
                <input id="my-input" class="form-control" type="text" name="nombreBarco">
            </div>

            <div class="form-group">
                <label for="my-input">Velocidad Barco</label>
                <input id="my-input" class="form-control" type="number" name="velocidad">
            </div>

            <div class="form-group">
                <label for="my-input">Rumbo Barco</label>
                <input id="my-input" class="form-control" type="number" name="rumbo">
            </div>

    
    
            <h2>Latitud Actual</h2>
    
            <div class="form-group">
                <label for="my-input">Grados</label>
                <input id="my-input" class="form-control" type="number" name="latGrados">
            </div>
    
            <div class="form-group">
                <label for="my-input">Minutos</label>
                <input id="my-input" class="form-control" type="number" name="latMinutos">
            </div>
    
            <div class="form-group">
                <label for="my-input">Segundos</label>
                <input id="my-input" class="form-control" type="number" name="latSegundos">
            </div>
    
            <h2>Longitud Actual</h2>
    
            <div class="form-group">
                <label for="my-input">Grados</label>
                <input id="my-input" class="form-control" type="number" name="longGrados">
            </div>
    
            <div class="form-group">
                <label for="my-input">Minutos</label>
                <input id="my-input" class="form-control" type="number" name="longMinutos">
            </div>
    
            <div class="form-group">
                <label for="my-input">Segundos</label>
                <input id="my-input" class="form-control" type="number" name="longSegundos">
            </div>
            
        

            <br>
            <br>
            <br>
    
    
            <button type="submit" class="btn btn-primary">Calcular</button>
          </form>
        </div>
        <br>
        <br>
        <br>

        <h2>Resultados</h2>
        <br>
        <br>
        <h3>Fecha y Hora: <%- datosBarco[3] %></h3>
        <h3>Embarcación : <%- datosBarco[0] %></h3>
        <h4>Rumbo Actual: <%- datosBarco[2]  %>°</h4>
        <h4>Velocidad Actual: <%- datosBarco[1] %> Kts</h4>
        <h4>Posición Actual: Latitud: <%- datosBarco[5] %> Longitud: 0<%- datosBarco[6] %></h4>
        

        <br>
        <br>
        <h3>Punto Probable de encuentro </h3>
        <h4>Para el dia y hora: <%- datosBarco[4] %> </h4>
        
        <h4>Latitud : <%- puntoDeEncuentro.latitude %> </h4>
        <h4>Longitud : 0<%- puntoDeEncuentro.longitude %> </h4>
        <br>
        <br>
        <h3>Distancia al Punto Probable de encuento </h3>
        <h4>Aeropuerto Mar del plata: <%- distanciaPuntoDeEncuentro[0] %> Nm</h4>
        <h4>Aeropuerto Bahia Blanca: <%- distanciaPuntoDeEncuentro[1] %> Nm</h4>
        <h4>Aeropuerto Viedma: <%- distanciaPuntoDeEncuentro[2] %> Nm</h4>
      
        <br>


        <h2>RUTAS Y DISTANCIAS</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th scope="col">Rutas</th>
                <th scope="col">Distancia Total</th>
                <th scope="col">Tiempo Total Estimado EC225 (140KTS)</th>
                <th scope="col">Tiempo Total Estimado CASA (150KTS)</th>
                <th scope="col">Combustible Necesario EC225</th>
                <th scope="col">Combustible Necesario CASA</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>MDP-BARCO-MDP</td>
                <td><%-datosCuadro.sazmToShip%> Nm</td>
                <td><%-tiempoEc.sazmToShip%></td>
                <td><%-tiempoCasa.sazmToShip%></td>
                <td><%-(tiempoEc.sazmToShip) * 700%> kG</td>
                <td><%-(tiempoCasa.sazmToShip) * 600%> Lbs</td>
              </tr>
              <tr>
                <td>MDP-BARCO-BCA</td>
                <td><%-datosCuadro.sazmToShipToBca%> Nm</td>
                <td><%-tiempoEc.sazmToShipToBca%></td>
                <td><%-tiempoCasa.sazmToShipToBca%></td>
                <td><%-(tiempoEc.sazmToShipToBca) * 700%> kG</td>
                <td><%-(tiempoCasa.sazmToShipToBca) * 600%> Lbs</td>              
            </tr>
              <tr>
                <td>MDP-BARCO-VIE</td>
                <td><%-datosCuadro.sazmToShipToVie%> Nm</td>
                <td><%-tiempoEc.sazmToShipToVie%></td>
                <td><%-tiempoCasa.sazmToShipToVie%></td>                
                <td><%-(tiempoEc.sazmToShipToVie) * 700%> kG</td>
                <td><%-(tiempoCasa.sazmToShipToVie) * 600%> Lbs</td>              
              </tr>
              <tr>
                <td>MDP-BCA-BARCO-BCA</td>
                <td><%-datosCuadro.sazmToBcaToShipToBca%> Nm</td>
                <td><%-tiempoEc.sazmToBcaToShipToBca%></td>
                <td><%-tiempoCasa.sazmToBcaToShipToBca%></td>  
                <td><%-(tiempoEc.sazmToBcaToShipToBca) * 700%> kG</td>
                <td><%-(tiempoCasa.sazmToBcaToShipToBca) * 600%> Lbs</td>               
            </tr>
              <tr>
                <td>MDP-BCA-BARCO-VIE</td>
                <td><%-datosCuadro.sazmToBcaToShipToVie%> Nm</td>
                <td><%-tiempoEc.sazmToBcaToShipToVie%></td>
                <td><%-tiempoCasa.sazmToBcaToShipToVie%></td>  
                <td><%-(tiempoEc.sazmToBcaToShipToVie) * 700%> kG</td>
                <td><%-(tiempoCasa.sazmToBcaToShipToVie) * 600%> Lbs</td>               
              </tr>
              <tr>
                <td>MDP-VIE-BARCO-VIE</td>
                <td><%-datosCuadro.sazmToVieToShipToVie%> Nm</td>
                <td><%-tiempoEc.sazmToVieToShipToVie%></td>
                <td><%-tiempoCasa.sazmToVieToShipToVie%></td>  
                <td><%-(tiempoEc.sazmToVieToShipToVie) * 700%> kG</td>
                <td><%-(tiempoCasa.sazmToVieToShipToVie) * 600%> Lbs</td>               
              </tr>
              
            </tbody>
          </table>
        </div>
     
</body>

<%- include('layouts/footer') %> 
